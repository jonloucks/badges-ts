{
  "name": "@jonloucks/badges-ts",
  "version": "0.1.1",
  "description": "Node.js badge creator",
  "private": true,
  "type": "module",
  "main": "index.js",
  "bin": {
    "@jonloucks/badges-ts": "cli.js",
    "badges-ts": "cli.js"
  },
  "types": "index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "require": "./index.js",
      "import": "./index.js",
      "default": "./index.js"
    },
    "./cli": {
      "types": "./cli.d.ts",
      "require": "./cli.js",
      "import": "./cli.js",
      "default": "./cli.js"
    },
    "./api/*": {
      "types": "./api/*.d.ts",
      "require": "./api/*.js",
      "import": "./api/*.js",
      "default": "./api/*.js"
    },
    "./auxiliary/*": {
      "types": "./auxiliary/*.d.ts",
      "require": "./auxiliary/*.js",
      "import": "./auxiliary/*.js",
      "default": "./auxiliary/*.js"
    }
  },
  "files": [
    "*",
    "!never-publish/**/*",
    "!**/*.test.*",
    "!**/*.spec.*"
  ],
  "scripts": {
    "build": "tsc",
    "test": "tsx --test $(find src -name '*.test.ts')",
    "test:watch": "tsx --test --watch $(find src -name '*.test.ts')",
    "test:coverage": "npx c8 --check-coverage --lines 95 --functions 95 --branches 90 --statements 95 --reporter=lcov npx tsx --test $(find src -name '*.test.ts')",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prepublishOnly": "npm run build",
    "before:publish": "npm run clean && npm run compile && cp package.json dist && cp README.md dist && mkdir -p dist/data && cp src/data/* dist/data/ && cd dist && npm pkg delete private",
    "after:publish": "npm run clean",
    "prepare": "npm run build",
    "docs": "typedoc --options typedoc.json",
    "badges": "npx tsx ./src/cli.ts generate",
    "discover": "npx tsx ./src/cli.ts discover",
    "clean": "rm -rf dist && rm -rf coverage && npm install",
    "compile": "tsc",
    "postversion": "npm run applyversion",
    "applyversion": "npx tsx ./src/cli.ts apply-version",
    "pack-package": "npm run before:publish && mkdir -p packs && cd dist && npm pack && mv *.tgz ../packs/ && npm run after:publish"
  },
  "keywords": [
    "typescript",
    "badge",
    "workflow",
    "status"
  ],
  "author": "Jon Loucks",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonloucks/badges-ts.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.53.1",
    "c8": "^10.1.3",
    "eslint": "^10.0.0",
    "tsx": "^4.19.2",
    "typedoc": "^0.28.15",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@jonloucks/contracts-ts": "^2.0.0"
  }
}
