{
  "name": "@jonloucks/badges-ts",
  "version": "1.3.0",
  "description": "Node.js badge creator",
  "private": true,
  "type": "module",
  "main": "index.js",
  "bin": {
    "@jonloucks/badges-ts": "bin/badges-ts.js",
    "badges-ts": "bin/badges-ts.js"
  },
  "types": "index.d.ts",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.js",
      "default": "./index.js"
    },
    "./version": {
      "types": "./version.d.ts",
      "import": "./version.js",
      "default": "./version.js"
    },
    "./cli": {
      "types": "./cli.d.ts",
      "import": "./cli.js",
      "default": "./cli.js"
    },
    "./api/*": {
      "types": "./api/*.d.ts",
      "import": "./api/*.js",
      "default": "./api/*.js"
    },
    "./auxiliary/*": {
      "types": "./auxiliary/*.d.ts",
      "import": "./auxiliary/*.js",
      "default": "./auxiliary/*.js"
    }
  },
  "files": [
    "*",
    "!never-publish/**/*",
    "!**/*.test.*",
    "!**/*.spec.*"
  ],
  "scripts": {
    "build": "tsc",
    "test": "tsx --test $(find src -name '*.test.ts')",
    "test:watch": "tsx --test --watch $(find src -name '*.test.ts')",
    "test:coverage": "mkdir -p coverage && tsx --test --experimental-test-coverage --experimental-specifier-resolution=node --test-reporter=lcov $(find src -name '*.test.ts') > coverage/lcov.info",
    "test:coverage-report": "npx tsx ./src/bin/badges-ts.js coverage-report",
    "test:coverage-gate": "npx tsx ./src/bin/badges-ts.js coverage-gate",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prepublishOnly": "npm run build",
    "before:publish": "npm run clean && npm run compile && cp package.json dist && cp README.md dist && mkdir -p dist/data && cp src/data/*.dat dist/data/ && cd dist && npm pkg delete private",
    "after:publish": "npm run clean",
    "prepare": "npm run build",
    "docs": "typedoc --options typedoc.json",
    "badges": "npx tsx ./src/bin/badges-ts.js generate --verbose",
    "discover": "npx tsx ./src/bin/badges-ts.js discover",
    "clean": "rm -rf dist && rm -rf coverage && npm install",
    "compile": "tsc",
    "postversion": "npm run applyversion",
    "applyversion": "npx tsx ./src/bin/badges-ts.js apply-version",
    "pack-package": "npm run before:publish && mkdir -p packs && cd dist && npm pack && mv *.tgz ../packs/ && npm run after:publish"
  },
  "keywords": [
    "typescript",
    "badge",
    "workflow",
    "status"
  ],
  "author": "Jon Loucks",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonloucks/badges-ts.git"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  
  "overrides": {
    "minimatch": "10.2.1"
  },

  "devDependencies": {
    "@types/node": "^25.3.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.1",
    "eslint": "^9.39.2",
    "tsx": "^4.19.2",
    "typedoc": "^0.28.17",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@jonloucks/contracts-ts": "^2.0.2",
    "@jonloucks/variants-ts": "^1.1.0"
  }
}
